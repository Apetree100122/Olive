{
    "input_model": {
        "type": "HfModel",
        "load_kwargs": { "attn_implementation": "eager" },
        "model_path": "microsoft/Phi-3-mini-4k-instruct"
    },
    "systems": {
        "local_system": {
            "type": "LocalSystem",
            "accelerators": [ { "device": "gpu", "execution_providers": [ "CUDAExecutionProvider" ] } ]
        }
    },
    "data_configs": [
        {
            "name": "train_data",
            "type": "HuggingfaceContainer",
            "load_dataset_config": {
                "data_name": "json",
                "data_files": "phrase_classification_dataset.json",
                "split": "train[:70%]"
            },
            "pre_process_data_config": {
                "text_template": "<|user|>\n{phrase}<|end|>\n<|assistant|>\n{tone}<|end|>",
                "max_seq_len": 1024
            }
        },
        {
            "name": "eval_data",
            "type": "HuggingfaceContainer",
            "load_dataset_config": {
                "data_name": "json",
                "data_files": "phrase_classification_dataset.json",
                "split": "train[70%:]"
            },
            "pre_process_data_config": {
                "text_template": "<|user|>\n{phrase}<|end|>\n<|assistant|>\n{tone}<|end|>",
                "max_seq_len": 1024
            }
        }
    ],
    "passes": {
        "f": {
            "train_data_config": "train_data",
            "type": "qlora",
            "torch_dtype": "bfloat16",
            "training_args": {
                "per_device_train_batch_size": 16,
                "per_device_eval_batch_size": 16,
                "max_steps": 150,
                "logging_steps": 50,
                "deepspeed": "deepspeed_config.json"
            },
            "lora_r": 64,
            "lora_alpha": 16,
            "eval_data_config": "eval_data"
        }
    },
    "host": "local_system",
    "target": "local_system",
    "cache_dir": "cache",
    "output_dir": "models"
}
